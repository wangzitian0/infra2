# Environment variables for infra2 local execution

# =============================================================================
# VPS Configuration (必填)
# =============================================================================
VPS_HOST=
VPS_SSH_USER=root

# =============================================================================
# Domain Configuration (必填)
# =============================================================================
INTERNAL_DOMAIN=

# =============================================================================
# Vault Configuration (必填)
# =============================================================================
# Vault 地址，格式: http://vault.{INTERNAL_DOMAIN}
VAULT_ADDR=
# Vault Token (敏感，从 1Password 获取)
VAULT_TOKEN=

# =============================================================================
# 1Password Connect (可选，用于 Vault auto-unseal)
# =============================================================================
OP_CONNECT_TOKEN=
OP_VAULT_ID=
OP_ITEM_ID=
