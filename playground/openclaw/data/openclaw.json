{
    "gateway": {
        "mode": "local",
        "trustedProxies": [
            "*"
        ],
        "controlUi": {
            "dangerouslyDisableDeviceAuth": true
        }
    },
    "agents": {
        "defaults": {
            "maxConcurrent": 4,
            "model": {
                "primary": "coding/GLM-4.7"
            },
            "subagents": {
                "maxConcurrent": 8
            }
        }
    },
    "models": {
        "mode": "merge",
        "providers": {
            "coding": {
                "baseUrl": "https://api.z.ai/api/coding/paas/v4",
                "apiKey": "${ZAI_API_KEY}",
                "api": "openai-completions",
                "models": [
                    {
                        "id": "GLM-4.7",
                        "name": "GLM-4.7"
                    }
                ]
            }
        }
    }
}